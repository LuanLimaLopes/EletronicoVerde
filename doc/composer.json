{
    "name": "eletronicoverde/sistema",
    "description": "Sistema de gestão de pontos de coleta de lixo eletrônico",
    "type": "project",
    "keywords": [
        "reciclagem",
        "eletrônico",
        "sustentabilidade",
        "clean-architecture"
    ],
    "license": "MIT",
    "version": "2.0.0",
    "authors": [
        {
            "name": "Luan Lima",
            "email": "luanlimalopes14@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "EletronicoVerde\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "start": "php -S localhost:8000 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}